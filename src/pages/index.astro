---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Brands from '~/components/widgets/Brands.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps2 from '~/components/widgets/Steps2.astro';

const metadata = {
  title: 'GTY - Expertos en TI',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero image={{ src: '~/assets/images/linkeid.jpeg', alt: 'TrabajadoresGTY' }}>
    <Fragment slot="title">
      Somos expertos <span class="hidden xl:inline">en</span>
      <span class="text-accent dark:text-white highlight"> TI</span>
       .Entregamos soluciones TI para tu negocio.
    </Fragment>

    <Fragment slot="subtitle">
      <span class="sm:inline " >En <span class="font-semibold text-blue-600">GTY</span> , nos enorgullece ser tu aliado estratégico en
        el mundo en constante evolución de la Tecnología de la Información (TI). Con un equipo de expertos altamente
        calificados y apasionados, estamos comprometidos en proporcionar soluciones innovadoras y a medida para
        potenciar el rendimiento y el éxito de tu negocio.</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="QuienesSomos"
    title="¿Quiénes Somos?"
    subtitle="Somos una empresa joven y moderna compuesta de profesionales con vasta experiencia en el desarrollo y soporte de proyectos informáticos."
